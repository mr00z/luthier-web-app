@model IEnumerable<LuthierWebApp.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SubPagesLayout.cshtml";
}

<h2>Your orders</h2>

<p>
    @Html.ActionLink("Make new order", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Guitar.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luthier.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Guitar.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luthier.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
